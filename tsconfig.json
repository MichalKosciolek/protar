{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "jsx": "react-jsx",
      "paths": {
        "@ui/*": ["src/shared/ui/*"],
        "@components/*": ["src/components/*"]
      }
    },
    "include": ["src/**/*", "src/custom.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }